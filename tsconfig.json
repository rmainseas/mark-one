{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "ES6",
    "types": [
      "jsdom",
      "mocha",
      "node",
      "react",
      "react-dom",
      "sinon",
      "styled-components",
      "webpack"
    ],
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "testData": [
        "/__tests__/data/index.ts"
      ],
      "mark-one/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
